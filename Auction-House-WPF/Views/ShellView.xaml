        <Label Content="Tonnis Auktion" Grid.Column="6" HorizontalAlignment="Left" Margin="218.224,0,0,0" VerticalAlignment="Top" Height="52" Grid.RowSpan="3" Width="246" FontSize="36" Foreground="Red"/>
        <Label Content="100.000KM er det samme som kørt til" Grid.Column="2" HorizontalAlignment="Left" Margin="0,371,-60.2,0" VerticalAlignment="Top" Height="52" Width="801" FontSize="36" Foreground="Red" Grid.ColumnSpan="6" Grid.Row="6"/>


        <!-- Row 4 -->



    </Grid>
