@model List<Auction_House_MVC.Models.ShowBid>
@{
    ViewBag.Title = "ShowBids";
}

<h2>Current bids </h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">User name</th>
            <th scope="col">Date</th>
            <th scope="col">Bid</th>
        </tr>
    </thead>

    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <td>@(i+1)</td>
            <td>@Model.ElementAt(i).UserName</td>
            <td>@Model.ElementAt(i).Date</td>
            <td>@Model.ElementAt(i).Amount</td>
        </tr>
        }

    </tbody>
</table>